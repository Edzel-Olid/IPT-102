@page "/Myprofile"

<h3>My Profile</h3>

<div class="profile">
    <img src="https://via.placeholder.com/150" alt="Profile Picture" class="profile-picture" />
    <h4>@Name</h4>
    <p><strong>Occupation:</strong> @Occupation</p>
    <p><strong>Location:</strong> @Location</p>
    <p><strong>Interests:</strong> @string.Join(", ", Interests)</p>
    <p><strong>About Me:</strong> @AboutMe</p>
</div>

@code {
    private string Name = "Edzel John Olid";
    private string Occupation = "Student";
    private string Location = "Philippines";
    private List<string> Interests = new List<string> { "Programming", "Gaming (DOTA 2)", "Database Design", "Networking Concepts", "Reading" };
    private string AboutMe = "I am passionate about coding, especially in C#. I enjoy learning new technologies and working on challenging projects.";
}
<style>
    .profile {
        text-align: center;
        max-width: 300px;
        margin: 0 auto;
    }

    .profile-picture {
        border-radius: 50%;
        width: 150px;
        height: 150px;
    }

    h4 {
        margin-top: 10px;
        font-size: 1.5rem;
    }

    p {
        margin: 5px 0;
        font-size: 1rem;
    }
</style>
