@page "/calculator"

<h3>Basic Calculator</h3>

<div>
    <label>First Number:</label>
    <input @bind="firstNumber" type="number" />

    <label>Second Number:</label>
    <input @bind="secondNumber" type="number" />
</div>

<div>
    <button @onclick="PerformAddition">+</button>
    <button @onclick="PerformSubtraction">-</button>
    <button @onclick="PerformMultiplication">*</button>
    <button @onclick="PerformDivision">/</button>
</div>

<h4>Result: @result</h4>

@code {
    private double firstNumber;
    private double secondNumber;
    private double result;

    private void PerformAddition()
    {
       result = firstNumber + secondNumber ;
    }

    private void PerformSubtraction()
    {
        result = firstNumber - secondNumber;
    }

    private void PerformMultiplication()
    {
        result = firstNumber * secondNumber;
    }

    private void PerformDivision()
    {
        if (secondNumber != 0)
        {
            result = firstNumber / secondNumber;
        }
        else
        {
            result = double.NaN; // Not a Number if division by zero
        }
    }
}
